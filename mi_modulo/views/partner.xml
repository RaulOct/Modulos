<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit_session" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.session</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Insertamos dentro de la hoja principal -->
            <sheet position="inside">
                <group string="Instructor Info">
                    <field name="instructor"/>
                    <field name="session_ids" widget="many2many_tags"/>
                </group>
            </sheet>
        </field>
    </record>
</odoo>