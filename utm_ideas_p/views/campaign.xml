<odoo>
    <record id="view_campaign_tree" model="ir.ui.view">
        <field name="name">utm.campaign.tree</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="budget"/>
                <field name="traffic"/>
            </tree>
        </field>
    </record>

    <record id="view_campaign_form" model="ir.ui.view">
        <field name="name">utm.campaign.form</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="budget"/>
                        <field name="traffic" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Canales (Pipes)">
                            <field name="pipe_ids">
                                <tree editable="bottom">
                                    <field name="available_source_ids" column_invisible="1"/>
                                    <field name="available_medium_ids" column_invisible="1"/>

                                    <field name="source_id"
                                           options="{'no_create': True, 'no_open': True}"
                                           domain="[('id','in',available_source_ids)]"/>
                                    <field name="medium_id"
                                           options="{'no_create': True, 'no_open': True}"
                                           domain="[('id','in',available_medium_ids)]"/>
                                    <field name="traffic"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Contenidos">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="traffic"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_campaign_funnel" model="ir.ui.view">
        <field name="name">utm.campaign.funnel</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <graph string="Embudo de Campañas" type="bar">
                <field name="name" type="row"/>
                <field name="traffic" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_campaign_pivot" model="ir.ui.view">
        <field name="name">utm.campaign.pivot</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <pivot string="Mapa de calor de Campañas">
                <field name="start_date" type="col"/>
                <field name="name" type="row"/>
                <field name="traffic" type="measure"/>
                <field name="budget" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_campaign_pipes_filtered" model="ir.actions.act_window">
        <field name="name">Canales (Pipes)</field>
        <field name="res_model">utm.pipe</field>
        <field name="view_mode">graph,pivot</field>
    </record>

    <record id="view_campaign_form_smart_button" model="ir.ui.view">
        <field name="name">utm.campaign.form.smart_button</field>
        <field name="model">utm.campaign</field>
        <field name="inherit_id" ref="view_campaign_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <field name="pipe_count" invisible="1"/>
            </xpath>

            <xpath expr="//form/sheet/group[1]" position="before">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button"
                        icon="fa-bar-chart"
                        type="action"
                        name="%(action_campaign_pipes_filtered)d"
                        help="Ver el desglose del tráfico de esta campaña por sus canales (Pipes)"
                        context="{'search_default_campaign_id': active_id, 'graph_group_by': 'source_id'}">

                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pipe_count" widget="statinfo" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">Tráfico Canal</span>
                        </div>
                    </button>
                </div>
            </xpath>

        </field>
    </record>


    <record id="view_campaign_search" model="ir.ui.view">
        <field name="name">utm.campaign.search</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="start_date"/>
            </search>
        </field>
    </record>

    <record id="view_pipe_graph" model="ir.ui.view">
        <field name="name">utm.pipe.graph</field>
        <field name="model">utm.pipe</field>
        <field name="arch" type="xml">
            <graph string="Tráfico de Pipes por Fuente y Medio" type="bar" stacked="True">
                <field name="source_id" type="row"/>
                <field name="medium_id" type="col"/>
                <field name="traffic" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_pipe_pivot" model="ir.ui.view">
        <field name="name">utm.pipe.pivot</field>
        <field name="model">utm.pipe</field>
        <field name="arch" type="xml">
            <pivot string="Análisis Pivot de Pipes">
                <field name="source_id" type="row"/>
                <field name="medium_id" type="col"/>
                <field name="traffic" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_campaign_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Campañas</field>
        <field name="res_model">utm.campaign</field>
        <field name="view_mode">pivot,graph</field>
    </record>

    <record id="action_campaign" model="ir.actions.act_window">
        <field name="name">Campañas</field>
        <field name="res_model">utm.campaign</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_campaign_search"/>
    </record>

    <menuitem id="menu_campaign_root" name="Campañas"/>
    <menuitem id="menu_campaign" name="Gestión de Campañas"
              parent="menu_campaign_root" action="action_campaign"/>
    <menuitem id="menu_campaign_dashboard"
          name="Dashboard"
          parent="menu_campaign_root"
          action="action_campaign_dashboard"/>
</odoo>






