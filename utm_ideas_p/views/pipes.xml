<odoo>
    <!-- Lista -->
    <record id="view_pipes_tree" model="ir.ui.view">
        <field name="name">utm.pipes.tree</field>
        <field name="model">utm.pipes</field>
        <field name="arch" type="xml">
            <tree string="Configuración Pipes" delete="1">
                <field name="source"/>
                <field name="organic"/>
                <field name="ppc"/>
                <field name="display"/>
                <field name="social"/>
                <field name="social_paid"/>
                <field name="referral"/>
                <field name="email"/>
                <field name="newsletter"/>
                <field name="sms"/>
                <field name="push"/>
            </tree>
        </field>
    </record>

    <!-- Formulario -->
    <record id="view_pipes_form" model="ir.ui.view">
        <field name="name">utm.pipes.form</field>
        <field name="model">utm.pipes</field>
        <field name="arch" type="xml">
            <form string="Combinación Fuente-Medios">
                <sheet>
                    <group>
                        <field name="source"/>
                    </group>
                    <group string="Medios disponibles">
                        <field name="organic"/>
                        <field name="ppc"/>
                        <field name="display"/>
                        <field name="social"/>
                        <field name="social_paid"/>
                        <field name="referral"/>
                        <field name="email"/>
                        <field name="newsletter"/>
                        <field name="sms"/>
                        <field name="push"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_pipes" model="ir.actions.act_window">
        <field name="name">Configuración de Pipes</field>
        <field name="res_model">utm.pipes</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_pipes_root" name="Configuración de Pipes"/>
    <menuitem id="menu_pipes" name="Relaciones Fuente-Medios"
              parent="menu_pipes_root"
              action="action_pipes"/>
</odoo>
